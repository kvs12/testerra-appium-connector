<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
    <appender name="TestReportAppender"
        class="eu.tsystems.mms.tic.testframework.report.TesterraLogger">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} [%t] [%-5p]: %c{2} - %m%n" />
        </layout>
    </appender>
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] %c{1} - %m%n" />
        </layout>
    </appender>
    <logger name="eu.tsystems.mms.testframework">
        <level value="INFO" />
    </logger>
    <root>
        <level value="ERROR" />
        <appender-ref ref="console" />
        <appender-ref ref="TestReportAppender" />
    </root>
</log4j:configuration>